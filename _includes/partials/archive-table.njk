{%- if heading %}
<h2 class="archive-title">{{ heading }}</h2>
{%- endif %}

<div class="archive">
  <table class="archive-table" id="archive-table">
    <thead>
      <tr>
        <th class="archive-table__cell--published-at sortable" data-sort="date" data-col="0">Fecha <span class="sort-indicator"></span></th>
        <th class="archive-table__cell--title sortable" data-sort="string" data-col="1">Publicación <span class="sort-indicator"></span></th>
        <th class="archive-table__cell--song sortable" data-sort="string" data-col="2">Canción <span class="sort-indicator"></span></th>
        <th class="archive-table__cell--artist sortable" data-sort="string" data-col="3">Artista <span class="sort-indicator"></span></th>
        <th class="archive-table__cell--album sortable" data-sort="string" data-col="4">Álbum <span class="sort-indicator"></span></th>
        <th class="archive-table__cell--year sortable" data-sort="number" data-col="5">Año <span class="sort-indicator"></span></th>
        <th class="archive-table__cell--category sortable" data-sort="string" data-col="6">Categoría <span class="sort-indicator"></span></th>
        <th class="archive-table__cell--editor sortable" data-sort="string" data-col="7">Autor <span class="sort-indicator"></span></th>
      </tr>
    </thead>
    <tbody>
      {%- for post in posts -%}
      <tr>
        <td class="archive-table__cell--published-at" data-value="{{ post.published_at }}">{{ post.published_at | formatDate("dd/MM/yyyy") }}</td>
        <td class="archive-table__cell--title"><a href="/archive/{{ post.id }}.html">{{ post.title }}</a></td>
        <td class="archive-table__cell--song">{{ post.metadata.song }}</td>
        <td class="archive-table__cell--artist"><a href="/archive/artists/{{ post.metadata.artist | slugify }}">{{ post.metadata.artist }}</a></td>
        <td class="archive-table__cell--album"><a href="/archive/albums/{{ post.metadata.artist | slugify }}-{{ post.metadata.album | slugify }}">{{ post.metadata.album }}</a></td>
        <td class="archive-table__cell--year"><a href="/archive/years/{{ post.metadata.year }}">{{ post.metadata.year }}</a></td>
        <td class="archive-table__cell--category"><a href="/archive/categories/{{ post.metadata.category | slugify }}">{{ post.metadata.category }}</a></td>
        <td class="archive-table__cell--editor"><a href="/archive/editors/{{ post.editor.name | slugify }}">{{ post.editor.name }}</a></td>
      </tr>
      {%- endfor -%}
    </tbody>
  </table>
</div>

<script src="/js/archive-table-sort.js"></script>
